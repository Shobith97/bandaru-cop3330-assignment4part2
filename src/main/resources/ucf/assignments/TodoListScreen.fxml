      <TextField fx:id="idL" layoutX="29.0" layoutY="93.0" prefHeight="25.0" prefWidth="172.0" promptText="Id of todo list" />
      <Button layoutX="477.0" layoutY="351.0" mnemonicParsing="false" onAction="#onSaveButtonClick" text="Save to External file" />
      <Button layoutX="368.0" layoutY="351.0" mnemonicParsing="false" onAction="#onInsBtnClick" text="Instructions" />
   </children>
</AnchorPane>
