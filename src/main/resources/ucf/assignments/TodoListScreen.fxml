   <children>
      <Label layoutX="69.0" layoutY="49.0" text="Todo List">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <TextField fx:id="titleL" layoutX="29.0" layoutY="151.0" prefHeight="25.0" prefWidth="172.0" promptText="Title of todo list" />
      <Button layoutX="19.0" layoutY="208.0" mnemonicParsing="false" onAction="#onAddButtonClick" prefHeight="25.0" prefWidth="44.0" style="-fx-background-color: blue;" text="Add" textFill="WHITE" />
